<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Combined Project' %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <nav class="nav">
            <a href="/" class="nav-brand">
                <i class="fas fa-layer-group"></i>
                Combined Project
            </a>
            <div class="nav-links">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/weather" class="nav-link">
                        <i class="fas fa-temperature-high"></i>
                        Weather App
                    </a>
                    <a href="/bmi" class="nav-link">
                        <i class="fas fa-dumbbell"></i>
                        BMI Calculator
                    </a>
                    <a href="/blogs" class="nav-link">
                        <i class="fas fa-newspaper"></i>
                        Blog Posts
                    </a>
                    <a href="/email" class="nav-link">
                        <i class="fas fa-envelope-open-text"></i>
                        Email Service
                    </a>
                    <a href="/qr" class="nav-link">
                        <i class="fas fa-barcode"></i>
                        QR Generator
                    </a>
                <% } %>
            </div>
            <div class="nav-auth">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/users/profile" class="nav-link">
                        <i class="fas fa-gear"></i>
                        Account Settings
                    </a>
                    <a href="/auth/logout" class="nav-link nav-link-logout">
                        <i class="fas fa-right-from-bracket"></i>
                        Logout
                    </a>
                <% } else { %>
                    <a href="/auth/login" class="nav-link">
                        <i class="fas fa-right-to-bracket"></i>
                        Login
                    </a>
                    <a href="/auth/register" class="nav-link">
                        <i class="fas fa-user-plus"></i>
                        Register
                    </a>
                <% } %>
            </div>
        </nav>
    </header>
    <div class="container">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>
